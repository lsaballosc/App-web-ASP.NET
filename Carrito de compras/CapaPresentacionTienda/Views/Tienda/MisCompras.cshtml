@model List<CapaEntidad.DetalleVenta>
@{
    ViewBag.Title = "MisCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-sm-12">
            @{ 
                if(Model.Count > 0)
            {
                foreach(var item in Model)
                {
                    <div class="row mb-3">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <h6> ID TRANSACCION : @item.IdTransaccion</h6>
                                    <div class="table-responsive">
                                        <table class="table  bg-terracota rounded-3">
                                        <thead>
                                            <tr>

                                                <th>Imagen</th>
                                                <th>Producto</th>
                                                <th>Precio Unitario</th>
                                                <th>Cantidad</th>
                                                <th>Total</th>



                                            </tr>



                                        </thead>
                                            <tbody class="bg-terracota-soft">
                                                <tr>
                                                    <td>
                                                        <img class="card-img-top mb-5 mb-md-0" src="data:image/@item.oProducto.Extension;base64,@item.oProducto.Base64" style="width:120px; height: 120px" />



                                                    </td>
                                                    <td valign="middle">
                                                        @item.oProducto.Nombre

                                                    </td>
                                                    <td valign="middle">
                                                        ₡ @item.oProducto.Precio CRC

                                                    </td>
                                                    <td valign="middle">
                                                        @item.Cantidad

                                                    </td>
                                                    <td valign="middle">
                                                        ₡ @item.Total CRC

                                                    </td>

                                                </tr>
                                            </tbody>

                                        </table>
                                    </div>

                                </div>


                            </div>

                        </div>



                    </div>
                    }
}
else
            {
       
            <div class="container px-4 px-lg-5">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="rounded-box">
                            <h2 class="text-terracota fw-bold mb-4 text-center">JzelaCrochet</h2>
                            <p class="section-text mb-3 text-center">
                               Aún no has realizado compras
                            </p>
                            <p class="section-text mb-3 text-center">
                                Las compras que realices apareceran aquí
                            </p>
                        
                            <p class="section-text mt-4 text-center">
                             ¡Gracias por acompañarnos!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
     
            }
            }





        </div>



    </div>


</div>

